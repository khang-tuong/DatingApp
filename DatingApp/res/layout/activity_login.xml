<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.datingapp.LoginActivity" >

    <TextView
        android:id="@+id/activity_login_lbTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/activity_login_lbPassword"
        android:layout_marginTop="17dp"
        android:text="Dating"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/activity_login_txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_lbUsername"
        android:layout_centerHorizontal="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/activity_login_lbUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_lbTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/activity_login_txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activity_login_txtUsername"
        android:layout_below="@+id/activity_login_lbPassword"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/activity_login_lbPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/activity_login_lbUsername"
        android:layout_below="@+id/activity_login_txtUsername"
        android:layout_marginTop="16dp"
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/activity_login_btnLogin"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_login_txtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="onLogin"
        android:text="Login" />

</RelativeLayout>